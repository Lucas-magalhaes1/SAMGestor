{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Storage": {
    "Provider": "Local",
    "BasePath": "wwwroot/uploads",
    "PublicBaseUrl": "http://localhost:5000/uploads"
  },
  "Jwt": {
    "Issuer": "SAMGestor",
    "Audience": "SAMGestor.Web",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 7
  },
  "Lockout": {
    "MaxFailedAttempts": 5,
    "LockoutDurationMinutes": 15,
    "ResetFailedAttemptsMinutes": 30
  },
  "Email": {
    "BaseUrl": "http://localhost:1025/",
    "SendPath": "api/v2/messages"
  },
  "AllowedHosts": "*"
}
